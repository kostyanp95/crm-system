{
  "name": "crm-system",
  "version": "0.1.0-rc.1",
  "description": "crm system development with MEAN stack",
  "main": "index.js",
  "engines": {
    "node": "14.16.0",
    "npm": "6.14.11"
  },
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client-dev\"",
    "prod": "concurrently \"npm run server\" \"npm run client\"",
    "start": "node index.js",
    "server": "nodemon index",
    "client-install": "npm i --prefix client",
    "client": "npm run start --prefix client",
    "client-dev": "npm run start-dev --prefix client",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "compodoc": "compodoc -p src/tsconfig.compodoc.json",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=true npm run client-install && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kostyanp95/crm-system.git"
  },
  "keywords": [
    "MongoDB",
    "Express",
    "Angular",
    "Node"
  ],
  "author": "Kostyanp95",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kostyanp95/crm-system/issues"
  },
  "homepage": "https://github.com/kostyanp95/crm-system#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "mongoose": "^5.12.4",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0"
  },
  "devDependencies": {
    "concurrently": "^6.0.2",
    "conventional-changelog-cli": "^2.1.1",
    "husky": "^6.0.0",
    "nodemon": "^2.0.7",
    "@compodoc/compodoc": "^1.1.11"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
